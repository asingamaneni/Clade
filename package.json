{
  "name": "clade",
  "version": "0.1.0",
  "description": "Multi-agent orchestration platform built natively on Claude Code CLI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "clade": "dist/bin/clade.js"
  },
  "scripts": {
    "build": "npm run build:ui && tsup && node -e \"const{mkdirSync,copyFileSync}=require('fs');mkdirSync('dist/gateway',{recursive:true});copyFileSync('src/gateway/admin.html','dist/gateway/admin.html')\"",
    "build:ui": "cd ui && npm install && npx vite build",
    "dev": "tsup --watch",
    "start": "node dist/bin/clade.js start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/static": "^8.1.0",
    "@fastify/websocket": "^11.0.2",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@slack/bolt": "^4.2.0",
    "better-sqlite3": "^11.8.1",
    "commander": "^13.1.0",
    "cron": "^4.3.0",
    "discord.js": "^14.18.0",
    "fastify": "^5.2.1",
    "grammy": "^1.35.0",
    "inquirer": "^12.4.0",
    "strip-ansi": "^7.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitepress": "^1.6.4",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "src/gateway/admin.html",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "agent",
    "claude",
    "multi-agent",
    "autonomous",
    "mcp",
    "chatbot",
    "telegram",
    "slack",
    "discord"
  ],
  "license": "MIT"
}
